{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mrrtech-workspace/backend/courses": [
        "libs/backend/courses/src/index.ts"
      ],
      "@mrrtech-workspace/backend": ["libs/backend/src/index.ts"],
      "@mrrtech-workspace/backend-course-rating": [
        "libs/backend-course-rating/src/index.ts"
      ],
      "@mrrtech-workspace/frontend": ["libs/frontend/src/index.ts"],
      "@mrrtech-workspace/shared/nz-zorro": [
        "libs/shared/nz-zorro/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
